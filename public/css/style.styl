border-radius(a)
    -webkit-border-radius a
    -moz-border-radius a
    border-radius a


#cabecera
	width 100%
	height 200px
	background-image url("../images/fondo2.jpg")
	background-position 100% 100%
	position relative

#login
	width 100%
	height 25%
	background-color #428bca
	bottom 0
	position absolute
	padding 8px
	border 1px solid black

	table
		font-size 12px
		right 0
		position absolute

	button
		margin-left 7px

	td
		padding 0 10px 0 0

#logo
	background-color #fff
	border-radius(15px)
	left 50px
	position absolute
	width 400px
	height 250px
	box-shadow 2px 3px 8px 4px #d9534f

	img
		margin-left 20px
		margin-top 50px

#contenedor
	padding 7% 20% 7% 20%
	background-color #dedede

#principal
	width 100%
	min-height 500px
	border 5px solid #d9534f
	background-color #fff
	border-radius(15px)
	text-align center
	padding 15%
	box-shadow 2px 2px 8px 4px #666



