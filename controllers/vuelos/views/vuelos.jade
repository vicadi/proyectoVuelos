extends ../../../views/layout

block content
  #buscarVuelos
    table
     tr
      td(colspan="2")
       h3 Busqueda
     tr
      td
        span Fecha vuelo: 
      td
        span Origen:
      td
        span Destino:
     tr
      td
        input(type="date" class="form-control" name="fecha")
      td
        input(type="text" class="form-control" name="origen")
      td
        input(type="text" class="form-control" name="destino")
      td
        button(type="button" class="btn btn-primary") Buscar
  #resultado
    #listaVuelos
      form(method="POST", action="/vuelos/guardarVuelo")
        table
         tr
          td
           p Lista de vuelos
         tr
          td#seleccioVuelos
           select#vuelos(name="vuelos" class="form-control" size="10")
           input(name="vuelosOyD" type="hidden")
         tr
          td
           span Numero de pasajes
           select(name="numero" class="form-control")
            option(value="1") 1
            option(value="2") 2
            option(value="3") 3
            option(value="4") 4
            option(value="5") 5
         tr
          td
           button(type="submit" class="btn btn-primary" disabled) Guardar
    #detalleVuelo
      h3 Detalles del vuelo
      #detalles
