html
  head
    meta(charset="utf-8")
    title= title
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/style.css')
    link(rel='stylesheet', href='/css/myBootstrap.css')


    script(type='text/javascript', src='/js/jquery-1.10.2.js')
